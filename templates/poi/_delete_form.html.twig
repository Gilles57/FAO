<form method="post" action="{{ path('poi_delete', {'id': poi.id}) }}" onsubmit="return confirm('Es-tu sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poi.id) }}">
    <button class="btn">Supprimer</button>
</form>
