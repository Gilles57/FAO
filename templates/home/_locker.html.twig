<div class="dropdown" style="position: absolute; right: 10px; top: 10px;">
    <button class="btn  dropdown-toggle"
            type="button"
            id="dropdownMenuButton1"
            data-bs-toggle="dropdown"
            aria-expanded="false"
    >
        {% if is_granted('ROLE_ADMIN') %}
            <img src="{{ asset('images/logos/unlock.webp') }}"
                 width='20'
                 height='30'
                 alt="icon connecté">
        {% else %}
            <img src="{{ asset('images/logos/lock.webp') }}"
                 width='20'
                 height='30'
                 alt="icon déconnecté">
        {% endif %}

    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        {% if is_granted('ROLE_ADMIN') %}
            <li><a class="dropdown-item" href="{{ path('admin') }}">Administration</a></li>
            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
        {% else %}
            <li><a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a></li>
        {% endif %}
    </ul>
</div>
