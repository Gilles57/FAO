<div class="row bg-dark mt-3  p-2  ">
    <div class="row d-sm-flex">
        <div class="col-sm-4">
            <p class="fs-5 fw-bold d-sm-block d-none pied">Contacts :</p>
            <p class="">
                <a class=" btn-contact " href="{{ path('app_contact') }}"
                   >Me contacter <i
                            class="fa fa-envelope-o"></i>
                </a></p>
            <br>
        </div>

        <div class="col-sm-4 pied">
            <p class="fs-5 fw-bold d-sm-block d-none">Sur les réseaux sociaux :</p>
            <p><span class="fw-bold">Facebook : </span>{{ facebook }}<br>
                <span class="fw-bold">Youtube : </span>{{ youtube }}<br>
                <span class="fw-bold">Instagram : </span>{{ instagram }}<br>
                <span class="fw-bold">Tik tok : </span>{{ tiktok }}</p>
        </div>

        <div class="col-sm-4 d-sm-block d-none">
            <p class="fs-5 fw-bold d-sm-block d-none">Partenaires :</p>
            <p class="text-secondary pied">
                {% for partenaire in partenaires %}
                    <a href="{{ partenaire.site }}" target="_blank" class="text-decoration-none"
                       style="color: #D77739 !important;"><i class="fa fa-solid fa-globe"></i><span
                                class="fw-bold"> {{ partenaire.entreprise | upper }}</span></a> - {{ partenaire.codepostal }} {{ partenaire.ville | upper }}
                    <br>
                {% endfor %}
            </p>
        </div>
    </div>

    <p class="row text-center">
        <a href="{{ path('app_mentions_legales') }}"
           class="text-decoration-none mentions">
            Mentions légales
        </a>
    </p>

    <hr>

    {% include 'home/_copyright.html.twig' %}
</div>
