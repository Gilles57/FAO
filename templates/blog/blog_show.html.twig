{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4  ">
                <img class="img-thumbnail slidable hiding" style="display: none;"
                     src="{{ asset(post.mediaName) }}">
            </div>
            <div class="col-md-8 ">


                <h1>{{ post.titre }} </h1>
                <div class="fw-bold">{{ post.publishedAt | date('d-m-Y') }}</div>
                <hr>
                <div>{{ post.contenu | raw }} </div>

            </div>
        </div> {# Article #}

        <div class="row">
            <hr class="mt-3">
            <h3 class="text-center">Album photos</h3>
            <div>
                <div class="row ">
                    {% for photo in post.photos %}
                        <div class="col-3">
                            <img class="img-thumbnail"
                                 src="{{ asset('uploads/photos/'~photo.photoName) }}"
                                 alt="{{ "photo" }}">
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div> {# Album photos #}

        <div class="row">
            <a href="{{ path('app_blog') }}" class="btn btn-success mt-3 ">Retour aux souvenirs</a>
        </div> {# Bouton retour #}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('custom') }}
{% endblock javascripts %}
