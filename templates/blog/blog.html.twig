{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <div class="row  d-sm-flex ">

        {% for post in posts %}
            <div class="row ">
                <div class="col-5 col-sm-2">
                    <a href="{{ path('app_blog_show' , {'slug': post.slug}) }}"><img class="img-thumbnail slidable"
                                                                                     style="display: none"
                                                                                     src="{{ asset('uploads/photos/'~post.mediaName) }}"
                                                                                     alt="{{ 'uploads/photos/'~post.mediaName }}"></a>
                </div>

                <div class="col-7 col-sm-10 post">
                    <h1 class="h1 "><a href="{{ path('app_blog_show' , { 'slug': post.slug}) }}"
                                       class="text-decoration-none">{{ post.titre }}</a></h1>
                    <p class="fst-italic telephone" style="opacity: 80%">Publi√© le
                        : {{ post.publishedAt | date('d-m-Y') }}</p>

                </div>
                <div class="telephone" style="text-align: justify;">
                    {{ post.contenu | striptags | u.truncate(400, '...', false ) }}
                </div>
                <div style="text-align: right;"><a href="{{ path('app_blog_show' , {'slug': post.slug}) }}"
                                                   class="btn btn-outline-primary btn-sm my-1">Lire la suite...</a></div>
                <br>
                <hr class="text-secondary">
            </div>
        {% endfor %}
    </div>


    <div class="row text-center m-auto ">
        <div class="navigation ">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('custom') }}
{% endblock javascripts %}
